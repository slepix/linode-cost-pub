
# Frontend — URL of the PostgREST API (exposed on port 3000 by docker-compose)
VITE_API_URL=http://localhost:3000

# PostgreSQL superuser password (used by docker-compose only)
POSTGRES_PASSWORD=postgres

# Password for the lccm_app database user (used by PostgREST and the backend server)
LCCM_APP_PASSWORD=changeme

# JWT secret — must be at least 32 characters and identical in PostgREST and the database
# Generate a strong secret with: openssl rand -base64 48
JWT_SECRET=change-me-to-a-random-secret-of-at-least-32-characters

# Secret used by the backend refresh/sync API endpoints
REFRESH_API_SECRET=change-me
